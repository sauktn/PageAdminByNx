      "@page-admin/admin-web/ui-web/left-menu": ["libs/admin-web/ui-web/src/lib/left-menu/index.ts"],
      "@page-admin/admin-web/ui-web/top-menu": ["libs/admin-web/ui-web/src/lib/top-menu/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
